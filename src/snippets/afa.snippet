      <Code Language="csharp">
        <![CDATA[
            //ActionFilterAttribute â€“ to retrieve response status of a redirect
            public class RedirectToSingleSignOnFilter : ActionFilterAttribute
            {
                protected static readonly log4net.ILog log = log4net.LogManager.GetLogger(System.Reflection.MethodBase.GetCurrentMethod().DeclaringType);

                public override void OnResultExecuted(ResultExecutedContext filterContext)
                {
                    log.Info(string.Format("Redirect from Interact to IAM. URL: {0}. Status: {1}.",
                        filterContext.HttpContext.Response.RedirectLocation,
                        filterContext.HttpContext.Response.Status));
                }
            }]]>
      </Code>
    </Snippet>
